@page
@model IndexModel
@{
    ViewData["Title"] = "MegaDesk - Team Bountiful";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MegaDesk!</h1>
    <h2 class="py-5"><em>Build the desk of your dreams!</em></h2>
    <div class="hero container">
        <div class="container h-25"></div>
        <div class="container h-50 col-lg-5 col-sm-10">
            <a asp-page="/Quotes/AddQuote" class="btn btn-secondary btn-lg w-100 mt-5">Add Quote</a>
            <a asp-page="/Quotes/Index" class="btn btn-secondary btn-lg w-100 mt-5">View or Search Quotes</a>
            <a asp-page="/Logout" class="btn btn-secondary btn-lg w-100 mt-5">Exit and Log Out</a>
        </div>
    </div>
</div>
