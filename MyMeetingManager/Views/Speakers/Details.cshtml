@model MyMeetingManager.Models.Speaker

@{
    ViewData["Title"] = "Speaker Details";
}

<h1 class="text-center">Speaker Details</h1>
<hr />

<div>
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting)
        </dt>
        <dd class="col-sm-10">
            @{ if (Model.Meeting != null)
                {
                    @Model.Meeting.MeetingDate.ToShortDateString()
                } }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
        <dd class="col-sm-10">
            @{ if (Model.Member != null)
                {
                    @Model.Member.Salutation@: @Model.Member.Name
                } }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Minutes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Minutes)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Update</a> |
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>
