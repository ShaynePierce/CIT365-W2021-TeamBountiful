@model IEnumerable<MyMeetingManager.Models.Speaker>

@{
    ViewData["Title"] = "Speakers";
}

<h1 class="text-center">Speakers</h1>
<hr />
<p>
    <a class="btn btn-info" asp-action="Create">Add Speaker</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meeting.MeetingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Minutes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-style: italic;">
                    @Html.DisplayFor(modelItem => item.Meeting.MeetingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.Salutation) @Html.DisplayFor(modelItem => item.Member.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minutes)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Update</a> |
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
