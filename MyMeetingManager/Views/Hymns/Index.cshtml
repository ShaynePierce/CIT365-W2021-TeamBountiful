@model IEnumerable<MyMeetingManager.Models.Hymn>

@{
    ViewData["Title"] = "Hymns";
}

<h1 class="text-center">Hymns</h1>
<hr />
<p>
    <a class="btn btn-info" asp-action="Create">Add Hymn</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Update</a> |
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
